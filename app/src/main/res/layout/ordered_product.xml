<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:background="@drawable/loading"
            android:scaleType="centerCrop"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:padding="1dp"
            android:textStyle="bold"
            android:text="Television"/>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="10dp"
                android:padding="1dp"
                android:layout_below="@+id/phone"
                android:text="Price: "/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="2dp"
                android:padding="1dp"
                android:layout_below="@+id/phone"
                android:text="1000.00"/>
        </LinearLayout>
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="10dp"
            android:padding="1dp"
            android:layout_below="@+id/layout"
            android:text="Slightly used"/>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_below="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="10dp"
                android:padding="1dp"
                android:layout_below="@+id/phone"
                android:text="Status: "/>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_marginLeft="2dp"
                android:padding="1dp"
                android:layout_below="@+id/phone"
                android:text="Pending"
                android:textStyle="bold|italic"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/image"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/delivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_toLeftOf="@+id/out_of_stock"
                android:drawableTint="@color/defaultColor"
                android:drawableRight="@drawable/check_circle"/>
            <TextView
                android:id="@+id/out_of_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:drawableTint="@color/outOfOrder"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/out_of_stock"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>